files:
    "/sbin/appstart" :
        mode: "000755"
        owner: webapp
        group: webapp
        content: |
            ! /bin/bash
              rm /etc/localtime
              ln -s /usr/share/zoneinfo/Asia/Seoul /etc/localtime
            #!/usr/bin/env bash
            JAR_PATH=/var/app/current/application.jar

            # run app
            killall java
            java -Dfile.encoding=UTF-8 -jar $JAR_PATH